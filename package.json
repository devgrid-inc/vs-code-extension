{
  "name": "devgrid-insights",
  "displayName": "DevGrid Insights",
  "description": "Surface DevGrid insights (vulnerabilities, incidents, dependencies) for the repo, component, and application you are working on.",
  "version": "0.0.1",
  "publisher": "devgrid",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:devgrid.yaml",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devgrid.refresh",
        "title": "DevGrid: Refresh Insights"
      },
      {
        "command": "devgrid.openSettings",
        "title": "DevGrid: Open Settings"
      },
      {
        "command": "devgrid.openDashboard",
        "title": "DevGrid: Open in DevGrid"
      },
      {
        "command": "devgrid.setApiKey",
        "title": "DevGrid: Set API Key"
      },
      {
        "command": "devgrid.clearApiKey",
        "title": "DevGrid: Clear API Key"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "devgridInsights",
          "name": "DevGrid Insights"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "devgridInsights",
        "icon": "info",
        "contents": "Welcome to DevGrid Insights.\n\n1. Set your API key: <a href=command:devgrid.setApiKey>DevGrid: Set API Key</a>\n2. (Optional) Create a devgrid.yaml for custom identifiers.\n3. Refresh: <a href=command:devgrid.refresh>DevGrid: Refresh Insights</a>\n\nIf nothing appears, open the Output panel and select 'DevGrid' for logs."
      }
    ],
    "configuration": {
      "title": "DevGrid",
      "properties": {
        "devgrid.apiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "Deprecated: prefer the `DevGrid: Set API Key` command (stores securely). Used as a fallback only."
        },
        "devgrid.apiBaseUrl": {
          "type": "string",
          "default": "https://prod.api.devgrid.io",
          "markdownDescription": "Base URL for the DevGrid API."
        },
        "devgrid.maxItemsPerSection": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 50,
          "markdownDescription": "Maximum number of vulnerabilities, incidents, and dependencies to display in the DevGrid tree view."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.19.26",
    "@types/vscode": "^1.85.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}